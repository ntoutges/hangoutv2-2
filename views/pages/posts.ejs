<%- contentFor("head") %>
<script src="js/posts.js" type="module" defer></script>
<link rel="stylesheet" href="css/posts.css">

<%- contentFor("main") %>
<div id="posts-scroller">
  <div id="posts-container">
    <% if (isLoggedIn) { %>
      <div class="ejs-infos" id="logged-in"></div>
      <div class="posts" id="posts-preview">
        <div class="headers inputs">
          <input class="titles inputs" placeholder="Title" tabindex="1" maxlength="200"></input>
          <div id="title-underline"></div>
        </div>
        <div class="texts inputs" contenteditable="true" tabindex="2" maxlength="4000"></div>
        <div class="footers">
          <!-- to be set in JS (on client) -->
          <div class="published-dates"></div>
          <div class="published-times"></div>
          <button class="usernames inputs" tabindex="3">Publish</button>
        </div>
      </div>
    <% } %>
    <div id="posts-holder"></div>
  </div>
</div>